{
    "name": "Ubuntu com PHP 8.2 e Apache",
    //Imagem com a vers찾o mais recente do Ubuntu LTS
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/shyim/devcontainers-features/php:0": {
            "disableAllExtensions": true,
            "version": "8.2"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "hakcorp.php-awesome-snippets",
                "rifi2k.format-html-in-php",
                "MS-CEINTL.vscode-language-pack-pt-BR"
            ],
            "settings": {
                "editor.fontSize": 17,
                "terminal.integrated.fontSize": 17,
                "files.autoSave": "onWindowChange",
                "editor.wordWrap": "on",
                "editor.minimap.autohide": "mouseover",
				"explorer.compactFolders": false
            }
        }
    },
    "postCreateCommand": [
        //Atualiza lista de pacotes
        "sudo apt update",
        //Instala o pacote apache2
        "sudo apt install apache2 -y",
        /*Cria um link simb처lico da raiz do nosso projeto (/workspaces/nosso-repositorio) 
		para o diret처rio padr찾o do Apache em (/var/www/html)*/
        "sudo chmod a+x \"$(pwd)\" && sudo rm -rf /var/www/html && sudo ln -s \"$(pwd)\" /var/www/html"
    ]
}
